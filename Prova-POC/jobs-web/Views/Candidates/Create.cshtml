@model Jobs.Models.Candidate

@{
    ViewData["Title"] = "Meu Currículo";
}


<head>
    <link rel="stylesheet" type="text/css" href="~/css/style-NewResume.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;500;800&display=swap" rel="stylesheet">
    <title>Meu currículo</title>
</head>
<body>
    <div class="main">
        <div class="content">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="title">
                    <h1>Meu currículo</h1>
                </div>

                <fieldset>
                    <label class="subtitle">Dados pessoais</label>
                    <div class="form-group">
                        <input asp-for="Cpf" type="number" name="cpf" pattern="(\d{3}\.?\d{3}\.?\d{3}-?\d{2})|(\d{2}\.?\d{3}\.?\d{3}/?\d{4}-?\d{2})" placeholder="CPF">
                    </div>
                    <div class="form-group">
                        <input asp-for="Birthdate"
                               type="text"
                               name="birthdate"
                               id="birthdate"
                               onfocus="(this.type='date')"
                               onblur="(this.type='text')"
                               placeholder="Data de nascimento"
                               required />
                        <select asp-for="Gender"
                                name="gender" id="gender" asp-items="Html.GetEnumSelectList<Gender>()">
                            <option selected disable value="">Gênero</option>
                        </select>
                        <select asp-for="Race" name="race" id="race" asp-items="Html.GetEnumSelectList<Race>()">
                            <option selected disable value="">Raça</option>
                        </select>
                        <select asp-for="Pwd" name="pcd" id="pcd" asp-items="Html.GetEnumSelectList<Pwd>()">
                            <option selected disable value="">PCD</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input asp-for="Linkedin" type="text" nome="linkedin" id="linkedin" placeholder="Linkedin">
                    </div>
                </fieldset>

                <div>
                    <button type="submit" class="buttons">Salvar</button>
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/script-NewResume.js"></script>
    <!--
            <div>
            <a asp-action="Index">Back to List</a>
        </div>
    -->
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
